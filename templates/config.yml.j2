---

{{ ansible_managed | comment }}

collectors:
  enabled: {{ enabled_collectors }}

log:
  level: {{ windows_exporter_log_level }}

scrape:
  timeout-margin: {{ windows_exporter_scrape_timeout_margin | default(0.5) }}

telemetry:
  addr: "{{ windows_exporter_listen_address }}:{{ windows_exporter_port }}"
  path: /metrics
  max-requests: {{ windows_exporter_telemetry_max_requests | default(5) }}
